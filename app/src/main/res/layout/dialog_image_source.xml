<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="24dp"
    app:cardCornerRadius="16dp"
    app:cardElevation="8dp"
    app:strokeWidth="1dp"
    app:strokeColor="#00838F"
    app:cardBackgroundColor="#E0F7FA">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <TextView
            android:id="@+id/tvDialogTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Pilih Sumber Gambar"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold"
            android:gravity="center_horizontal"
            android:layout_marginBottom="24dp" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenCamera"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Buka Kamera"
            android:textColor="@color/white_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:icon="@drawable/ic_camera_24"
            app:iconPadding="12dp"
            app:iconTint="@color/white_primary"
            app:backgroundTint="#00838F"
            app:cornerRadius="8dp"
            app:rippleColor="@color/white_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnOpenGallery"
            style="@style/Widget.Material3.Button.Icon"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="0dp"
            android:text="Pilih dari Galeri"
            android:textColor="@color/white_primary"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            app:icon="@drawable/ic_placeholder_gallery"
            app:iconPadding="12dp"
            app:iconTint="@android:color/white"
            app:backgroundTint="#00838F"
            app:cornerRadius="8dp"
            app:rippleColor="@android:color/white"/>

    </LinearLayout>
</com.google.android.material.card.MaterialCardView>