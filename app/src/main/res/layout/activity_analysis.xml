<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFFFB"
    tools:context=".activities.AnalysisActivity"
    android:fitsSystemWindows="true">

    <!-- AppBar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBFFFB"
        app:elevation="0dp"
        app:layout_constraintTop_toTopOf="parent">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#EBFFFB">
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="Analisis Foto Luka"
                android:textColor="@color/blue"
                android:textSize="20sp"
                android:textStyle="bold" />
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Konten Scroll -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/appBarLayout"
        app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWoundImage"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#F4FEFC"
                app:cardCornerRadius="10dp"
                app:cardElevation="3dp"
                app:strokeColor="#CCEFF5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/ivWoundImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Foto luka"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_placeholder_gallery"
                        app:tint="#A6A6A6" />

                    <TextView
                        android:id="@+id/tvPlaceholderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:text="Unggah atau ambil foto luka dengan pencahayaan yang baik."
                        android:textAlignment="center"
                        android:textColor="#5A6A6B"
                        android:textSize="13sp" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectImage"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Pilih Gambar / Ambil Foto"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#03989E"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_camera_24"
                app:iconPadding="12dp"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartAnalysis"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="8dp"
                android:enabled="false"
                android:text="Mulai Analisis"
                android:textColor="#7F7F7F"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_baseline_medical_information_24"
                app:iconPadding="12dp"
                app:iconTint="#7F7F7F" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnViewGallery"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginTop="8dp"
                android:text="Lihat Galeri Luka Saya"
                android:textColor="@color/blue"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                app:strokeColor="@color/blue"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_placeholder_gallery"
                app:iconPadding="12dp"
                app:iconTint="@color/blue" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text="Catatan: Analisis ini hanya simulasi, bukan pengganti pemeriksaan medis profesional."
                android:textColor="#5A6A6B"
                android:textSize="12sp" />

        </LinearLayout>
    </ScrollView>

    <!-- Navbar -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        style="@style/Widget.App.BottomNavigationView.NoRipple"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white_primary"
        app:elevation="16dp"
        app:itemIconTint="@color/blue"
        app:itemTextColor="@color/blue"
        app:menu="@menu/bottom_nav_menu"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>