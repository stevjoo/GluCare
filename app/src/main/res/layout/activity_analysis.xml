<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#EBFFFB"
    tools:context=".activities.AnalysisActivity">

    <!-- TOP APP BAR -->
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#EBFFFB"
        android:theme="@style/ThemeOverlay.Material3.ActionBar"
        app:elevation="0dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/topAppBar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#EBFFFB"
            app:contentInsetLeft="0dp"
            app:contentInsetRight="0dp"
            app:contentInsetStart="0dp"
            app:contentInsetStartWithNavigation="0dp"
            app:navigationIcon="@drawable/ic_arrow_back_24">

            <!-- Custom center content: logo + title -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingStart="56dp"
                android:paddingEnd="56dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginEnd="6dp"
                    android:contentDescription="Logo GluCare"
                    android:src="@drawable/glucareicon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Analisis Foto Luka"
                    android:textColor="#002021"
                    android:textSize="20sp"
                    android:textStyle="bold" />


            </LinearLayout>
        </com.google.android.material.appbar.MaterialToolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:padding="24dp"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- IMAGE CARD -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardWoundImage"
                android:layout_width="match_parent"
                android:layout_height="230dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="#F4FEFC"
                app:cardCornerRadius="20dp"
                app:cardElevation="3dp"
                app:strokeColor="#CCEFF5"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <ImageView
                        android:id="@+id/ivWoundImage"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:adjustViewBounds="true"
                        android:contentDescription="Foto luka"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_placeholder_gallery"
                        app:tint="#A6A6A6" />

                    <TextView
                        android:id="@+id/tvPlaceholderText"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:gravity="center"
                        android:text="Unggah atau ambil foto luka dengan pencahayaan yang baik."
                        android:textAlignment="center"
                        android:textColor="#5A6A6B"
                        android:textSize="13sp" />


                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- BUTTONS -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnSelectImage"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:text="Pilih Gambar / Ambil Foto"
                android:textColor="@android:color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#03989E"
                app:cornerRadius="32dp"
                app:icon="@drawable/ic_camera_24"
                app:iconPadding="12dp"
                app:iconTint="@android:color/white" />

            <Space
                android:layout_width="match_parent"
                android:layout_height="12dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnStartAnalysis"
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:enabled="false"
                android:text="Mulai Analisis"
                android:textColor="#7F7F7F"
                android:textSize="16sp"
                android:textStyle="bold"
                app:backgroundTint="#D9D9D9"
                app:cornerRadius="32dp"
                app:icon="@drawable/ic_baseline_medical_information_24"
                app:iconPadding="12dp"
                app:iconTint="#7F7F7F" />

            <!-- FOOTNOTE -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:gravity="center"
                android:lineSpacingExtra="3dp"
                android:text="Catatan: Analisis ini hanya simulasi, bukan pengganti pemeriksaan medis profesional."
                android:textColor="#5A6A6B"
                android:textSize="12sp" />
        </LinearLayout>
    </ScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>