<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Gambar Full -->
        <ImageView
            android:id="@+id/imageCarousel"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            android:src="@drawable/diabetes_symptoms" />

        <!-- Overlay Gradasi Hitam (Tinggi 100dp agar cukup untuk 2 baris teks) -->
        <View
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradient_black_transparent" />

        <!-- Container Teks (Judul & Tanggal) -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul Berita -->
            <TextView
                android:id="@+id/tvCarouselTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Judul Berita Utama"
                android:textColor="@android:color/white"
                android:textStyle="bold"
                android:textSize="16sp"
                android:maxLines="2"
                android:ellipsize="end"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>

            <!-- Tanggal (Kecil di bawah judul) -->
            <TextView
                android:id="@+id/tvCarouselDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="12 Nov 2025"
                android:textColor="#DDDDDD"
                android:textSize="12sp"
                android:shadowColor="#000000"
                android:shadowDx="1"
                android:shadowDy="1"
                android:shadowRadius="2"/>
        </LinearLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>