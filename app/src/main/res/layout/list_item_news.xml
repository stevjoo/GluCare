<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="12dp"
    app:cardElevation="0dp"
    app:strokeWidth="1dp"
    app:strokeColor="#60E0E0E0"
    app:cardBackgroundColor="@color/white_primary">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="12dp"
        android:gravity="center_vertical">

        <!-- Gambar Kiri (Rounded) -->
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/ivNewsImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_image_placeholder"
            app:shapeAppearanceOverlay="@style/RoundedImageCorner" />

        <!-- Teks Kanan -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginStart="16dp">

            <!-- Tanggal -->
            <TextView
                android:id="@+id/tvNewsDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="11sp"
                android:textColor="@color/gray"
                android:layout_marginBottom="4dp"
                android:text="12 Nov 2025" />

            <!-- Judul -->
            <TextView
                android:id="@+id/tvNewsTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="@color/black"
                android:layout_marginBottom="4dp"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Judul Berita" />

            <!-- Ringkasan -->
            <TextView
                android:id="@+id/tvNewsSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:textColor="#757575"
                android:maxLines="2"
                android:ellipsize="end"
                android:text="Ringkasan berita singkat..." />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>