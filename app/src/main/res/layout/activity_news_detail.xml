<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_primary"
    android:fitsSystemWindows="true">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Frame Gambar Header -->
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="280dp">

                <ImageView
                    android:id="@+id/ivArticleImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:src="@drawable/ic_image_placeholder" />

                <!-- Bayangan Hitam di Atas (Agar tombol back terlihat) -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:background="@drawable/gradient_black_top" />
            </FrameLayout>

            <!-- Konten (Isi Berita) -->
            <!-- Margin Top negatif agar naik sedikit menutupi gambar -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@drawable/bg_sheet_top_rounded"
                android:padding="24dp"
                android:layout_marginTop="-30dp">

                <TextView
                    android:id="@+id/tvArticleTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Judul Berita"
                    android:textSize="22sp"
                    android:textStyle="bold"
                    android:textColor="@color/black"
                    android:layout_marginBottom="8dp"
                    android:lineSpacingMultiplier="1.2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="16dp"
                        android:layout_height="16dp"
                        android:src="@drawable/ic_baseline_medical_information_24"
                        app:tint="@color/blue" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Info Diabetes"
                        android:textSize="12sp"
                        android:textColor="@color/blue"
                        android:textStyle="bold"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"/>

                    <View
                        android:layout_width="1dp"
                        android:layout_height="12dp"
                        android:background="#CCCCCC"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bacaan 3 menit"
                        android:textSize="12sp"
                        android:textColor="#888888"
                        android:layout_marginStart="16dp"/>
                </LinearLayout>

                <TextView
                    android:id="@+id/tvArticleContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Isi konten berita..."
                    android:textSize="16sp"
                    android:textColor="#444444"
                    android:lineSpacingMultiplier="1.5"
                    android:justificationMode="inter_word"/>

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <!-- Tombol Back Floating -->
    <ImageView
        android:id="@+id/btnBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_margin="16dp"
        android:padding="8dp"
        android:src="@drawable/ic_arrow_left"
        app:tint="@android:color/white"
        android:background="@drawable/bg_circle_translucent"
        android:elevation="4dp"/>

</androidx.coordinatorlayout.widget.CoordinatorLayout>